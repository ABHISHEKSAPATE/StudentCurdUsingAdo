@model IEnumerable<StudentCurdUsingAdo.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => new Student().Rollno)</th>
            <th>@Html.DisplayNameFor(m => new Student().Name)</th>
            <th>@Html.DisplayNameFor(m => new Student().Branch)</th>
            <th>@Html.DisplayNameFor(m => new Student().Percentage)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No records found.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Rollno)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                    <td>@Html.DisplayFor(modelItem => item.Percentage)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Rollno }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Rollno }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Rollno })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
